@using (Html.BeginForm("Edit", "AdminUser", FormMethod.Post))
{
<div class="container">
    @if (Model != null)
    {
        <form method="post">
        <div class="mb-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" id="id" asp-for="Id" readonly />
        </div>
        <div class="mb-3">
            <label class="form-label">First Name</label>
            <input type="text" class="form-control" id="firstName" asp-for="FirstName" />
        </div>
        <div class="mb-3">
            <label class="form-label">Last Name</label>
            <input type="text" class="form-control" id="lastName" asp-for="LastName" />
        </div>
        <div class="mb-3">
            <label class="form-label">Username</label>
            <input type="text" class="form-control" id="username" asp-for="Username" />
        </div>
        <div class="mb-3">
            <label class="form-label">Team</label>
            <input type="text" class="form-control" id="team" asp-for="Team" />
        </div>
        <div class="mb-3">
            <label class="form-label">Position</label>
            <input type="text" class="form-control" id="position" asp-for="Position" />
        </div>
        <div class="mb-3">
            <label class="form-label">Room</label>
            <select class="form-select" asp-items="@Model.Locations" asp-for="SelectedLocations"></select>
        </div>

        <div class="mb-3 d-flex">
            <button type ="submit" class="btn btn-dark">Update</button>
                <button type="submit" class="btn btn-danger ms-2" asp-area="" asp-controller="AdminUser" asp-action="Delete">Delete</button>
        </div>
        </form>
    }

    else
    {
        <p>No database personnel found!</p>
    }
</div>
}